<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".main.Details.DetailsViewActivity">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/pokemonNameDetails"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageDetail"
        android:text="PokemonName"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/pokemonDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonNameDetails"
        android:text="DESCRIPTION asdiasjidsajlidasil disaljdilasjdilsaj dlasjdilsajild asjildjsaildjaslidjsailjdilsajdlias"
        android:layout_margin="16dp"
        android:background="#ffffff"/>

    <RelativeLayout
        android:layout_below="@id/pokemonDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types:"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/types1"
            android:layout_below="@id/types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type 1"/>

        <TextView
            android:id="@+id/typesAnd"
            android:layout_toRightOf="@id/types1"
            android:layout_alignTop="@id/types1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"/>

        <TextView
            android:id="@+id/types2"
            android:layout_toRightOf="@id/typesAnd"
            android:layout_alignTop="@id/types1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type 2"/>

        <TextView
            android:id="@+id/ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abilities:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/types1"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/ability1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ability 1"
            android:layout_below="@id/ability"/>

        <TextView
            android:id="@+id/abilitySeparate"
            android:layout_toRightOf="@id/ability1"
            android:layout_alignBottom="@id/ability1"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","/>

        <TextView
            android:id="@+id/ability2"
            android:layout_toRightOf="@id/abilitySeparate"
            android:layout_alignTop="@id/ability1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ability 2"/>

        <TextView
            android:id="@+id/abilityAnd"
            android:layout_toRightOf="@id/ability2"
            android:layout_alignTop="@id/ability1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"/>

        <TextView
            android:id="@+id/ability3"
            android:layout_toRightOf="@id/abilityAnd"
            android:layout_alignTop="@id/ability1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ability 3"/>

        <TextView
            android:id="@+id/form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Number:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/ability1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/formNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignTop="@id/form"
            android:layout_toRightOf="@id/form"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</RelativeLayout>